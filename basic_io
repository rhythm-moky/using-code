#define _CRT_SECURE_NO_WARNINGS 1

#include<stdio.h>
#include<string.h>

int main(void)
{
	int num=0;
	scanf("%d", &num);
	printf("%d\n", num);

	getchar();

	char letter = 'a';
	scanf("%c", &letter);
	printf("%c %d\n", letter,letter);

	short int num1 = 0;
	scanf("%hd", &num1);
	printf("%hd\n", num1);

	long int num2;
	scanf("%ld",&num2);
	printf("%d\n", num2);

	float num3;
	scanf("%f", &num3);
	printf("%f\n", num3);

	double num4;
	scanf("%lf", &num4);
	printf("%lf %e\n", num4,num4);

	char sentence[40] = "what is your name?";
	char sentence_twice[40];
	scanf("%s", sentence_twice);
	printf("%s\n%s\n", sentence, sentence_twice);
	printf("%d\n", strlen(sentence_twice));
	
	printf("%d\n", sizeof(int));
	printf("%d", sizeof(sentence_twice) / sizeof(sentence_twice[0]));
	return 0;
}
